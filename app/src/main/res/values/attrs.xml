<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom attributes for Browser Toolbar components -->
    <declare-styleable name="BrowserToolbar">
        <!-- Secure color attribute for the toolbar -->
        <attr name="browserToolbarSecureColor" format="color" />

        <!-- Menu color attribute for the toolbar -->
        <attr name="browserToolbarMenuColor" format="color" />

        <!-- Clear color attribute for the toolbar -->
        <attr name="browserToolbarClearColor" format="color" />

        <!-- Progress bar gravity attribute with enum values -->
        <attr name="browserToolbarProgressBarGravity" format="enum">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
            <enum name="end" value="2" />
            <enum name="top" value="3" />
            <enum name="bottom" value="4" />
        </attr>

        <!-- Tracking protection and security indicator separator color attribute -->
        <attr name="browserToolbarTrackingProtectionAndSecurityIndicatorSeparatorColor" format="color" />

        <!-- Insecure color attribute for the toolbar -->
        <attr name="browserToolbarInsecureColor" format="color" />
    </declare-styleable>

    <declare-styleable name="TabCountView">
        <attr name="tabIconColor" format="reference|color" />
        <attr name="tabIconTextSize" format="dimension"/>
        <attr name="tabIconBorderWidth" format="dimension"/>
        <attr name="tabIconBorderRadius" format="dimension"/>
    </declare-styleable>
</resources>